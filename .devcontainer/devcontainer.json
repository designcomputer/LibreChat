{
  "name": "LibreChat Dev Container",
  "dockerComposeFile": [
    "../docker-compose.yml",
    "docker-compose.yml"
  ],
  "service": "app",
  "workspaceFolder": "/workspaces/LibreChat",
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {}
  },
  "runArgs": ["--privileged"],
  "postCreateCommand": "dockerd-entrypoint.sh & sleep 5 && docker compose up -d",
  "forwardPorts": [3080],
  "shutdownAction": "stopCompose"
}
